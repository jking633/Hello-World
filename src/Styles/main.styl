.blurb
  text-align center
  padding 20px
  margin 0 auto 4px auto
  max-width 305px
  line-height 150%
  font-size 14px
  border solid 1px $white
  color $white
  font-family "Helvetica Neue", Helvetica, Arial, sans-serif
  font-weight normal
  letter-spacing 0.5px
  -webkit-font-smoothing antialiased

.ctaWrapper
  text-align center

.cta,
a.ctahover,
a.ctaactive,
a.ctavisited,
button.ctahover,
button.ctaactive,
button.ctavisited
  background-color #1a1a1a
  color #fff
  text-transform uppercase
  text-align center
  display inline-block
  padding 15px
  width 150px
  cursor pointer

.cta.blue
  background-color #214478 !important

.cta.green
  background-color #217844 !important

.cta.red
  background-color #c83737 !important

.warning
  color #c83737
  font-size 17px
  text-align center
  line-height 150%
  padding 0 0 20px 0 

/* Form Styling for Account Creation page and others */
.formWrapper
  margin 0 auto
  max-width 500px
  padding 15px

.formError
  display none
  background-color #c8046d
  color #fff
  padding 10px 15px
  margin 0 0 20px
  text-align center

.formSuccess
  display none
  background-color #217844
  color #fff
  padding 10px 15px
  margin 0 6px 6px 6px
  text-align center

hr 
  margin 30px 0

input,select,option 
  border-width 1px
  border-radius 2px
  padding 7px 1%
  width 100%

.checkboxGroup input
  display inline-block
  width initial
  margin 20px

input.disabled
  background-color #efefef

.inputWrapper
  padding 0 0 20px 0

.inputLabel
  padding 0 0 5px 0
  color #808080

.backButton
  text-transform uppercase
  font-weight bold !important
  display inline-block !important
  width 100px
  padding 7px !important
  color #fff !important
  background-color #1a1a1a
  text-align center
  cursor pointer

table
  width 100%

tr
  width 100%

th
  text-transform uppercase
  font-weight bold
  padding 10px
  border-color #000
  border-style dotted
  padding 10px
  margin 0 0 10px 0
  background-color #efefef

td
  padding 5px

td a, td a:hover, td a:active
  color #2e5fa8
  text-decoration underline
  cursor pointer

