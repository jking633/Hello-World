/*************************************************************************/
/* Import Variables */
@import 'variables'

/*************************************************************************/
/* Base HTML button element Styles */
input,
textarea
  border: 0;
  margin: 0;
  font-family: $globalBaseFontFamily;
  font-size: rem($globalFontSize);
  -webkit-appearance: none;
  border-radius: $globalBorderRadius;
  &:focus
    outline: 0;
  &::-ms-clear
    display: none;

/*************************************************************************/
/* Standard styles to be extended off of */
$standard-input-textarea
  width: 100%;
  height: inherit;
  position: relative;
  z-index: $z1;
  box-shadow: createBorder(all, $mediumGrey);

/*************************************************************************/
/* Form Group */
.{$prefix}-form-group
  &.inline
    display: table;

    .{$prefix}
      &-input-container
      &-textarea-container
        display: table-row;

      &-input
      &-textarea
      &-label
        display: table-cell;
        vertical-align: middle;

      &-label
        width: 1%;
        white-space: nowrap;

/*************************************************************************/
/* Inputs and Textareas */
.{$prefix}-input-container
.{$prefix}-textarea-container
  width: 100%;
  position: relative;
  display: block;
  text-align: left;
  overflow: hidden;

  .{$prefix}
    &-input
      @extend $standard-input-textarea;
      min-height: unit(round(1.666666667 * $globalLineHeight), 'px'); /* min-height for vertical rhythm */
      &::-webkit-input-placeholder
        color: $grey;
      &:-moz-placeholder
         color: $grey;
      &::-moz-placeholder
         color: $grey;
      &:-ms-input-placeholder
         color: $grey;

    &-textarea
      @extend $standard-input-textarea;
      min-height: 96px;
      resize: vertical;
      overflow: auto;
      display: block;

    &-label
      display: block;      

    &-error-msg
      display: none;
      color: $error;
      font-size: 12px;
      line-height: getLineHeight(@font-size);

  &.error
    .{$prefix}-input
    .{$prefix}-textarea
      box-shadow: createBorder(all, $error);
    .{$prefix}-error-msg
      display: block;
